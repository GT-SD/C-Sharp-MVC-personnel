@model IEnumerable<Kursovaya_MVC.Worker_has_Children>

@{
    ViewBag.Title = "Дети работников";
}

<h2>Дети работников</h2>

<p>
    @Html.ActionLink("Добавить запись", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Children.ID_Children)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Children.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Worker.N_worker)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Worker.Full_Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Children.ID_Children)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Children.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Worker.N_worker)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Worker.Full_Name)
        </td>
        <td>
            @Html.ActionLink("Редактировать", "Edit", new { id=item.ID_Rec }) |
            @Html.ActionLink("Детали", "Details", new { id=item.ID_Rec }) |
            @Html.ActionLink("Удалить", "Delete", new { id=item.ID_Rec })
        </td>
    </tr>
}

</table>
