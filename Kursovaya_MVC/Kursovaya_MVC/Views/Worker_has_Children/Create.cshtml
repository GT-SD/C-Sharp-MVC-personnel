@model Kursovaya_MVC.Worker_has_Children

@{
    ViewBag.Title = "Добавить связь работник - ребенок";
}

<h2>Добавить связь работник - ребенок</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Ребенок родителя</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Children_ID_Children, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("Children_ID_Children", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Children_ID_Children, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Worker_N_worker, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("Worker_N_worker", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Worker_N_worker, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Добавить" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Назад к списку", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
