@model IEnumerable<Kursovaya_MVC.Department>

@{
    ViewBag.Title = "Отделы";
}

<h2>Отделы</h2>

<p>
    @Html.ActionLink("Добавить отдел", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ID_Department)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Numb_Rooms)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ID_Department)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Numb_Rooms)
        </td>
        <td>
            @Html.ActionLink("Редактировать", "Edit", new { id=item.ID_Department }) |
            @Html.ActionLink("Детали", "Details", new { id=item.ID_Department }) |
            @Html.ActionLink("Удалить", "Delete", new { id=item.ID_Department })
        </td>
    </tr>
}

</table>
